<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.Will_To_Who_Fragment"
        android:background="#FAFAFA">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rel_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                        app:tint="#B33A3A"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بيانات الموصى له"
                        android:textSize="20sp"
                        android:textColor="#B33A3A"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/more_options"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp" />

                    <ImageView
                        android:id="@+id/more_options"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_more_vert_24"
                        app:tint="#B33A3A"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/rel_bar"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="الاسم بالكامل"
                        android:textColorHint="#807070"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_marginBottom="45dp"
                        android:inputType="textPersonName" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="رقم الهوية"
                        android:textColorHint="#807070"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_marginBottom="45dp"
                        android:inputType="number" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="رقم الجوال"
                        android:textColorHint="#807070"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_marginBottom="45dp"
                        android:inputType="phone"
                        android:textAlignment="textEnd" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="صلة القرابة / العلاقة"
                        android:textColorHint="#807070"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_marginBottom="45dp"
                        android:inputType="text" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="السن"
                        android:textColorHint="#807070"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_marginBottom="45dp"
                        android:inputType="number" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="الوظيفة"
                        android:textColorHint="#807070"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_marginBottom="45dp"
                        android:inputType="text" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="العنوان"
                        android:textColorHint="#807070"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_marginBottom="45dp"
                        android:inputType="text" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="162dp"
                            android:layout_height="51dp"
                            android:text="حفظ البيانات"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:background="@drawable/back_save_btn"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="10dp"
                            android:elevation="8dp" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</layout>