<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.Contactt_Us_Fragment"
        android:background="#FAFAFA">

        <RelativeLayout
            android:id="@+id/rel_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                app:tint="#B33A3A"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الشكاوى و الاقتراحات"
                android:textSize="20sp"
                android:textColor="#B33A3A"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/more_options"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:id="@+id/more_options"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:tint="#B33A3A"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_dots"
            android:layout_width="323dp"
            android:layout_height="465dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rel_bar"
            android:layout_marginTop="15dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="اكتب رسالتك هنا"
                android:textColorHint="#807070"
                android:textDirection="rtl"
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="top|right"
                android:padding="10dp"
                android:background="@drawable/dotted_back_rel" />

            <RelativeLayout
                android:id="@+id/rel_thanks"
                android:layout_width="335dp"
                android:layout_height="201dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rel_back_thanks_contactus"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="يسعدنا تواصلك معنا\nسيتم الرد عليك\nقريبا"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:gravity="center" />
            </RelativeLayout>
        </RelativeLayout>


        <Button
            android:id="@+id/btn_send"
            android:layout_width="127dp"
            android:layout_height="47dp"
            android:text="ارسال"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/back_save_btn"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rel_dots"
            android:layout_marginTop="90dp"
            android:elevation="8dp" />


    </RelativeLayout>
</layout>