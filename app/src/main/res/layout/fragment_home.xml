<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    android:background="#FAFAFA"
    >
    <RelativeLayout
        android:id="@+id/rel_show_drawer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_menu_rel"
        android:elevation="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_sort_24"
            android:layout_centerInParent="true"
            app:tint="#B33A3A"
            android:contentDescription="@string/app_name"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_stories"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_below="@+id/rel_show_drawer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
                <ImageView
                    android:id="@+id/my_story_img"
                    android:layout_width="match_parent"
                    android:layout_height="103dp"
                    android:src="@drawable/sh"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="33dp"
                    android:layout_height="17dp"
                    android:text="قصتك"
                    android:textColor="#261421"
                    android:textSize="14sp"
                    android:layout_below="@+id/my_story_img"
                    android:layout_centerHorizontal="true"
                    />
                <RelativeLayout
                    android:layout_width="31dp"
                    android:layout_height="30dp"
                    android:background="@drawable/back_add_story"
                    android:elevation="8dp"
                    android:layout_alignParentEnd="true"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_add_24"
                        android:layout_centerInParent="true"
                        app:tint="#B9A195"
                        android:contentDescription="@string/app_name"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_stories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:listitem="@layout/single_item_stories"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/rel_stories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/sh7"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="-50dp"
                    />
                <RelativeLayout
                    android:layout_width="175dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/back_main1"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="137dp"
                        android:layout_height="wrap_content"
                        android:text="الاشتراك بصندوق وصيتى"
                        android:textSize="16sp"
                        android:textColor="#261421"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"/>
                    <RelativeLayout
                        android:layout_width="95dp"
                        android:layout_height="22dp"
                        android:layout_centerInParent="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27$"
                            android:textSize="18sp"
                            android:textColor="#707070"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="سنويا"
                            android:textSize="14sp"
                            android:textColor="#707070"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            />

                    </RelativeLayout>
                    <Button
                        android:layout_width="87dp"
                        android:layout_height="32dp"
                        android:background="@drawable/back_main_btn1"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:elevation="8dp"
                        android:text="اشترك"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/sh1"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="-50dp"
                    />
                <RelativeLayout
                    android:layout_width="175dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/back_main2"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="137dp"
                        android:layout_height="wrap_content"
                        android:text="اكتب وصيتك الأولى واحفظها بالصندوق"
                        android:textSize="16sp"
                        android:textColor="#261421"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"/>
                    <RelativeLayout
                        android:layout_width="95dp"
                        android:layout_height="22dp"
                        android:layout_centerInParent="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مجانا"
                            android:textSize="14sp"
                            android:textColor="#707070"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>
                    <Button
                        android:id="@+id/to_create_will_btn"
                        android:layout_width="87dp"
                        android:layout_height="32dp"
                        android:background="@drawable/back_main_btn2"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:elevation="8dp"
                        android:text="اذهب"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/sh3"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="-50dp"
                    />
                <RelativeLayout
                    android:layout_width="175dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/back_main3"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="137dp"
                        android:layout_height="wrap_content"
                        android:text="أضف وصية أخرى"
                        android:textSize="16sp"
                        android:textColor="#261421"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"/>
                    <RelativeLayout
                        android:layout_width="95dp"
                        android:layout_height="22dp"
                        android:layout_centerInParent="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.22$"
                            android:textSize="18sp"
                            android:textColor="#707070"
                            android:layout_centerInParent="true"
                            />


                    </RelativeLayout>
                    <Button
                        android:layout_width="87dp"
                        android:layout_height="32dp"
                        android:background="@drawable/back_main_btn3"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:elevation="8dp"
                        android:text="اذهب"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        />


                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="52dp"
        android:layout_height="50dp"
        app:tint="#B33A3A"
        app:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_baseline_chat_bubble_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="25dp"
        android:contentDescription="@string/app_name"
        app:elevation="50dp"/>

</RelativeLayout>