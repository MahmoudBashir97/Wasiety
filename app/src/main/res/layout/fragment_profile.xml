<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ProfileFragment"
        android:background="#FAFAFA">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                        app:tint="#B33A3A"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"/>

                    <ImageView
                        android:id="@+id/more_options"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_more_vert_24"
                        app:tint="#B33A3A"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/app_name"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_prof_pic"
                    android:layout_width="152dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rel_bar"
                    android:layout_marginBottom="10dp">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sh"
                        app:civ_border_width="1dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="1dp"
                        />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:src="@drawable/ic_baseline_add_circle_24"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="5dp"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_prof_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mahmoud Abd Elazeim"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#751A2C"
                    android:layout_below="@+id/rel_prof_pic"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/txt_prof_name"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="38.5dp"
                        android:text="الاسم بالكامل"
                        android:textColor="#807070"
                        android:textSize="20sp"
                        android:textDirection="rtl"
                        android:gravity="center_vertical" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1.5dp"
                        android:background="#807070"
                        android:layout_marginBottom="25dp" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="38.5dp"
                        android:text="رقم الهوية"
                        android:textColor="#807070"
                        android:textSize="20sp"
                        android:textDirection="rtl"
                        android:gravity="center_vertical" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1.5dp"
                        android:background="#807070"
                        android:layout_marginBottom="25dp" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="38.5dp"
                        android:text="رقم الجوال"
                        android:textColor="#807070"
                        android:textSize="20sp"
                        android:textDirection="rtl"
                        android:gravity="center_vertical" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1.5dp"
                        android:background="#807070"
                        android:layout_marginBottom="25dp" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="38.5dp"
                        android:text="الايميل"
                        android:textColor="#807070"
                        android:textSize="20sp"
                        android:textDirection="rtl"
                        android:gravity="center_vertical" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1.5dp"
                        android:background="#807070"
                        android:layout_marginBottom="25dp" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="38.5dp"
                        android:text="السن"
                        android:textColor="#807070"
                        android:textSize="20sp"
                        android:textDirection="rtl"
                        android:gravity="center_vertical" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1.5dp"
                        android:background="#807070"
                        android:layout_marginBottom="25dp" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="38.5dp"
                        android:gravity="center_vertical"
                        android:text="الوظيفة"
                        android:textColor="#807070"
                        android:textDirection="rtl"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1.5dp"
                        android:background="#807070"
                        android:layout_marginBottom="25dp" />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</layout>